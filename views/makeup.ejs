      }

      function loadMore() {
         let loadMoreBtn = document.querySelector('.seemore_bt'); // Corrected selector
         let currentItem = 12;

         loadMoreBtn.onclick = () => {
            let boxes = document.querySelectorAll('.product_box'); // Corrected selector
            boxes = Array.from(boxes); // Convert NodeList to Array

            for (let i = currentItem; i < currentItem + 4 && i < boxes.length; i++) {
               boxes[i].style.display = "inline-block";
            }

            currentItem += 4;

            if (currentItem >= boxes.length) {
               loadMoreBtn.style.display = "none";
            }
         }
      }

      // Call the function when the page loads
      window.onload = loadMore;




